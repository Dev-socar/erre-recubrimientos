---
import Menu from "./Menu.astro";
---

<header class="h-dvh relative overflow-hidden" id="hero">
  <Menu />

  <div class="absolute inset-0 -z-10 bg-black">
    <video
      autoplay
      muted
      loop
      playsinline
      poster="/assets/images/servicios/foto01.webp"
      class="w-full h-full object-cover video-fade-in"
    >
      <source
        src="/assets/videos/hero-desktop.mp4"
        type="video/mp4"
        media="(min-width: 768px)"
      />
      <source
        src="/assets/videos/hero-mobil.mp4"
        type="video/mp4"
        media="(max-width: 767px)"
      />
    </video>

    <div class="absolute inset-0 bg-black/65"></div>
  </div>

  <div
    class="absolute -translate-y-1/2 -translate-x-1/2 left-1/2 h-fit top-1/2 lg:left-20 lg:translate-0 z-10 w-[95%]"
  >
    <h1 class="text-secondary text-lg uppercase">ERRE Recubrimientos</h1>
    <p class="text-white text-5xl my-3 max-w-2xl">
      Especialistas en recubrimientos y pintura de alta
      durabilidad y calidad en Mérida, Yucatán.
    </p>
    <div class="md:flex md:justify-center lg:justify-start mt-10">
      <a
        href="#contacto"
        class="group inline-flex items-center gap-4  border border-primary text-white px-10 py-5 text-base uppercase tracking-[0.15em] hover:bg-white hover:text-primary transition-all duration-500 cursor-pointer"
      >
        Contáctanos
      </a>
    </div>
  </div>
</header>
