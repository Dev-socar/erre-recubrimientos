---
import { type Image } from "@/types/Image";

interface Props {
  image: Image;
  index: number;
}

const { image, index } = Astro.props as Props;
---

<div
  class={`bento-item group relative overflow-hidden rounded-xs cursor-pointer opacity-0 translate-y-10 transition-all duration-700 ${image.class ?? ""}`}
  data-index={index}
>
  <img
    src={image.url}
    alt={image.text}
    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    loading="lazy"
  />

  <div
    class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>

  
  <div
    class="absolute bottom-5 left-5 text-white translate-y-6 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500"
  >
    <p class="text-xs font-semibold">{image.text}</p>
  </div>
</div>


