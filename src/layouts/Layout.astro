---
import FloatButton from '@/components/FloatButton.astro';
import Hero from '../components/Hero.astro';
import { SiteInformation } from "@/const/SiteInformation";
import "../styles/global.css";
import Footer from '@/components/Footer.astro';
import WhatsAppFloat from '@/components/WhatsAppFloat.astro';
import ScrollProgress from '@/components/ScrollProgress.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Primary SEO -->
    <title>ERRE Recubrimientos | Recubrimientos, Pintura e Impermeabilización</title>
    <meta name="description" content={SiteInformation.description} />
    <meta name="author" content="ERRE Recubrimientos" />
    <link rel="canonical" href={SiteInformation.url} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/logos/logotipo.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ERRE Recubrimientos | Expertos en Recubrimientos" />
    <meta property="og:description" content={SiteInformation.description} />
    <meta property="og:image" content={`${SiteInformation.url}${SiteInformation.image}`} />
    <meta property="og:url" content={SiteInformation.url} />
    <meta property="og:locale" content="es_MX" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="ERRE Recubrimientos" />
    <meta name="twitter:description" content={SiteInformation.description} />
    <meta name="twitter:image" content={`${SiteInformation.url}${SiteInformation.image}`} />

    <head>
  <link rel="sitemap" href="/sitemap-index.xml" />
</head>

    <!-- Schema.org Local Business -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        name: "ERRE Recubrimientos",
        image: `${SiteInformation.url}${SiteInformation.image}`,
        url: SiteInformation.url,
        description: SiteInformation.description,
        telephone: "+52 999 649 8926",
        address: {
          "@type": "PostalAddress",
          addressLocality: "Mérida",
          addressRegion: "Yucatán",
          addressCountry: "MX"
        },
        openingHoursSpecification: [
          {
            "@type": "OpeningHoursSpecification",
            dayOfWeek: [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday"
            ],
            opens: "08:00",
            closes: "17:00"
          }
        ],
        areaServed: {
          "@type": "City",
          name: "Mérida"
        },
        serviceOffered: [
          { "@type": "Service", name: "Aplicación de pasta" },
          { "@type": "Service", name: "Chukum" },
          { "@type": "Service", name: "Pintura residencial y comercial" },
          { "@type": "Service", name: "Impermeabilización" },
          { "@type": "Service", name: "Servicios de plomería" },
          { "@type": "Service", name: "Servicios de electricidad" }
        ]
      })}
    </script>
  </head>

  <body>
    <ScrollProgress />
    <FloatButton />
    <WhatsAppFloat phone="529996498926" message="Hola, estoy interesado en sus servicios. ¿Podrían proporcionarme más información?" />
    <Hero />
    <slot />
    <Footer />
  </body>
</html>
<script>
  import { observerAnimations, initMobileMenu, initReviewAnimations,initScrollProgress } from "@/utils/animations";
import { sendEmail } from '@/utils/SendEmail';
import { setupLenis } from '@/utils/setupLenis';

  document.addEventListener("DOMContentLoaded", () => {
    setupLenis();
    initScrollProgress();
    initMobileMenu();
    sendEmail();
    initReviewAnimations();
    observerAnimations("bento-item");
    observerAnimations("review-item");
    observerAnimations("service-item");
  });
</script>