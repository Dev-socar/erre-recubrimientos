---
import FloatButton from '@/components/FloatButton.astro';
import Hero from '../components/Hero.astro';
import { site } from "@/const/site";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Primary SEO -->
    <title>ERRE Recubrimientos | Recubrimientos, Pintura e Impermeabilización</title>
    <meta name="description" content={site.description} />
    <meta name="author" content="ERRE Recubrimientos" />
    <link rel="canonical" href={site.url} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/logos/logotipo.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ERRE Recubrimientos | Expertos en Recubrimientos" />
    <meta property="og:description" content={site.description} />
    <meta property="og:image" content={`${site.url}${site.image}`} />
    <meta property="og:url" content={site.url} />
    <meta property="og:locale" content="es_MX" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="ERRE Recubrimientos" />
    <meta name="twitter:description" content={site.description} />
    <meta name="twitter:image" content={`${site.url}${site.image}`} />

    <!-- Schema.org Local Business -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        name: "ERRE Recubrimientos",
        image: `${site.url}${site.image}`,
        url: site.url,
        description: site.description,
        telephone: "+52 999 649 8926",
        address: {
          "@type": "PostalAddress",
          addressLocality: "Mérida",
          addressRegion: "Yucatán",
          addressCountry: "MX"
        },
        openingHoursSpecification: [
          {
            "@type": "OpeningHoursSpecification",
            dayOfWeek: [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday"
            ],
            opens: "08:00",
            closes: "17:00"
          }
        ],
        areaServed: {
          "@type": "City",
          name: "Mérida"
        },
        serviceOffered: [
          { "@type": "Service", name: "Aplicación de pasta" },
          { "@type": "Service", name: "Chukum" },
          { "@type": "Service", name: "Pintura residencial y comercial" },
          { "@type": "Service", name: "Impermeabilización" },
          { "@type": "Service", name: "Servicios de plomería" },
          { "@type": "Service", name: "Servicios de electricidad" }
        ]
      })}
    </script>
  </head>

  <body>
    <FloatButton />
    <Hero />
    <slot />
  </body>
</html>

<script>
  import { observerAnimations } from "@/utils/animations";

  document.addEventListener("DOMContentLoaded", () => {
    observerAnimations("bento-item");
    observerAnimations("review-item");
    observerAnimations("service-item");
  });
</script>